<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#f4f4f4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="270dp"
                android:layout_height="318dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/baseline_person_24"
                android:contentDescription="Profile Image"
                android:scaleType="centerCrop"/>
<!--                android:src="@drawable/profile_image_placeholder" -->

            <!-- Name -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:text="Student_Name"
                android:textAlignment="center"
                android:textColor="#4A148C"
                android:textSize="34sp"
                android:textStyle="bold" />

            <!-- Role/Title -->
            <TextView
                android:id="@+id/profile_role"
                android:layout_width="208dp"
                android:layout_height="49dp"
                android:layout_marginTop="4dp"
                android:text="student"
                android:textAlignment="center"
                android:textColor="#757575"
                android:textSize="24sp" />

            <!-- Description -->

            <!-- Contact Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Phone Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="73dp"
                        android:background="@drawable/baseline_local_phone_24"
                        android:src="@drawable/baseline_local_phone_24"
                        app:tint="#673AB7" />

                    <TextView
                        android:id="@+id/profile_phone"
                        android:layout_width="280dp"
                        android:layout_height="68dp"
                        android:layout_marginStart="8dp"
                        android:text="999999999"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:background="@drawable/baseline_email_24"
                        android:src="@drawable/baseline_email_24"
                        app:tint="#673AB7" />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="303dp"
                        android:layout_height="69dp"
                        android:layout_marginStart="8dp"
                        android:text="priyanhdhabi@gmail.com"
                        android:textColor="#212121"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="68dp"
                        android:background="@drawable/baseline_person_24"
                        android:src="@drawable/baseline_person_24"
                        app:tint="#673AB7" />

                    <TextView
                        android:id="@+id/profile_address"
                        android:layout_width="280dp"
                        android:layout_height="68dp"
                        android:layout_marginStart="8dp"
                        android:text="22C21016"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>